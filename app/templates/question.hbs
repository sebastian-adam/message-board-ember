{{nav-bar saveQuestion="saveQuestion"}}

<div class="col-sm-10 col-sm-offset-1 message-board">
  <div class="message-container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h3>{{model.question.content}}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5 col-sm-offset-7">
        <h5><em>{{model.question.author}} ({{model.question.date}})</em></h5>
      </div>
    </div>
  </div>
  {{#each model.question.answers as |answer|}}
    <div class="message-container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h3>{{answer.content}}</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5 col-sm-offset-7">
          <h5><em>{{answer.author}} ({{answer.date}})</em></h5>
        </div>
      </div>
    </div>
    <button {{action 'removeAnswer' answer model.question}}>Remove Answere</button><br>
  {{else}}
    <div class="message-container answer-container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <p class="subtitle">No answers have been added yet</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<div class="row">
  <div class="col-md-12">
    <hr>
  </div>
</div>

{{new-answer saveAnswer="saveAnswer"}}
