{{#link-to 'question' question.id}}
  <div class="message-container tile-hover">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h3>{{question.content}}</h3>
      </div>
      <div class="col-sm-1">
        <span class="answer-count-badge badge">{{question.answers.length}}</span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5 col-sm-offset-7">
        <h5><em>{{question.author}} ({{question.date}})</em></h5>
      </div>
    </div>
  </div>
{{/link-to}}
