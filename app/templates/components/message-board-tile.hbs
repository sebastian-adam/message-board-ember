{{ #link-to 'question' question.id }}
  <div class="row">
    <div class="col-sm-6">
      <h5>{{ question.author }}</h5>
    </div>
    <div class="col-sm-6">
      <h5>{{ question.date }}</h5>
    </div>
  </div>
  <div class="row">
    <h3>
      {{ question.content }}
    </h3>
  <div>
  <div class="row">
    <div class="col-sm-8 col-offset-sm-3">
      <h5>{{ question.answer }}</h5>
    </div>
  </div>
{{ /link-to }}
