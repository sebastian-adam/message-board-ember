<div class="jumbotron answer-form-container">
  <div class="row">
    <div class="col-sm-10 col-md-offset-1 text-center">
      <form class="question-form answer-form">
        <h1>NEW A</h1>
        <div class="row">
          <div class="col-sm-5 text-center">
            <div class="form-group name">
              <label for="answer-name">Name</label>
              {{input value=answer-author id="answer-name"}}
            </div>
            <div class="form-group date">
              <label for="answer-date">Date</label>
              {{input value=answer-date id="answer-date"}}
            </div>
          </div>
          <div class="col-sm-7 text-center">
            <div class="form-group question">
              <label for="answer-answer">Answer</label>
              {{textarea rows="4" value=answer-content id="answer-answer"}}
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 text-center">
            <button class="new-answer-btn" {{action 'saveAnswer'}}>Save</button>
            <button class="new-answer-btn" {{action 'cancelSaveAnswer'}}>Clear</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
