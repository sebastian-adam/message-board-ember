{{#if updateQuestionForm}}
  <div class="jumbotron update-question-form-container">
    <div class="row">
      <div class="col-sm-10 col-md-offset-1 text-center">
        <form class="question-form">
          <h1>UPDATE Q</h1>
          <div class="row">
            <div class="col-sm-5 text-center">
              <div class="form-group name">
                <label for="update-name">Name</label>
                {{input value=update-author id="update-name" placeholder=question.author}}
              </div>
              <div class="form-group date">
                <label for="update-date">Date</label>
                {{input value=update-date id="update-date" placeholder=question.date}}
              </div>
            </div>
            <div class="col-sm-7 text-center">
              <div class="form-group question">
                <label for="update-question">Question</label>
                {{textarea rows="4" value=update-content id="update-question" placeholder=question.content}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 text-center">
              <button class="new-update-btn" {{action 'update' question}}>Save</button>
              <button class="new-update-btn" {{action 'cancelUpdateQuestion'}}>Cancel</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr>
    </div>
  </div>
{{else}}
  <div class="update-btn-container">
    <button class="update-btn" {{action 'updateQuestionForm'}}>Update</button>
  </div>
{{/if}}
