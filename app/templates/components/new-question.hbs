{{#if newQuestionRequest}}
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=author id="name"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input value=content id="question"}}
    </div>

    <button{{action 'saveQuestion'}}>Save</button>
    <button{{action 'cancelSaveQuestion'}}>Cancel</button>
  </form>
{{/if}}
